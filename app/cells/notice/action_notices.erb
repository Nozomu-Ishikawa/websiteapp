<div class="card bg-white border-none shadow-sm mb-3">
  <div class="card-header font-weight-bold">
    お知らせ
  </div>
  <div class="card-body">
    <% if @notices.any? %>
      <% @notices.each do |notice| %>
        <div class="list-group list-group-flush">
          <%= link_to notices_path do %>
            <div class="list-group-item"><%= notice.created_at.strftime("%Y年%m月%d日") %> <%= notice.title %></div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">まだお知らせがありません</p>
    <% end %>
    
  </div>
</div>