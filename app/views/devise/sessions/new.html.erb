<div class="login">
  <div class="login-message"><span>Let's login!!</span></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control input-lg' %>
      </div>
      <div class="field">
        <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control input-lg' %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Login', class: 'btn-login' %>
      </div>
      <%# <div class="social">
        <%= link_to "twitter", root_path, class: 'tw' %>
        <%# <%= link_to "github", root_path, class: 'gh' %>
        <%# <%= link_to "google", root_path, class: 'google' %>
      <%# </div> %>
    <% end %>
    <%= link_to 'トップページへ戻る', root_path, class: "btn-top"%>
    <%# <%= render "devise/shared/links" %>
  </div>
</div>
