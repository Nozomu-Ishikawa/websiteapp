  <div class="login">
    <div class="login-message"><span>welcome!!</span></div>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control input-lg' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control input-lg' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password_confirmation, placeholder: 'Repeat password', class: 'form-control input-lg' %>
          </div>
          <div class='form-group'>
            <%= f.submit 'Sign up', class: 'btn-login' %>
          </div>
          <h6>SNS login?</h6>
          <div class="social">
            <%= link_to "twitter", root_path, class: 'tw btn-login' %>
            <%= link_to "github", user_github_omniauth_authorize_path, method: :post, class: 'gh btn-login' %>
            <%= link_to 'google+', root_path, method: :post, class: 'google btn-login' %>
          </div>
          <div class="form-end">
            <%= link_to 'トップページへ戻る', root_path, class: "btn-top"%>
          </div>
        <% end %>
    </div>
  </div>
