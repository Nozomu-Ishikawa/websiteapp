<header class="masthead navbar-light" id="main_header">
<style>
@import url('https://fonts.googleapis.com/css2?family=DotGothic16&display=swap');
</style>
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">
      <img src="<%= image_path('main-image.png') %>">
    </a>

    <div id="account-controls" class="hidden-xs pull-right">
    <% if user_signed_in? %>
      <div class="login-signup">
        <ul class="dropdwn">
          <li>
            <%= current_user.email %>
            <ul class="dropdwn_menu">
              <li><%= link_to 'My Account', edit_user_registration_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            <ul>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
      <div class="login-signup">
        <ul class="dropdwn">
          <li>Hello!guest!
            <ul class="dropdwn_menu">
              <li><%= link_to 'Log in', new_user_session_path %><li>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
            </ul>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</header>

<div class="navbar navbar-inverse navbar-static-top collapse navbar-collapse hidden-sm navbar-dark navbar-light affix" id="nav">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-9 col-md-10">
        <ul class="nav navbar-nav nav-justified">
          <div class="nav-link">
            <li><%= link_to 'ABOUT US',root_path('#')%></li>
            <li><%= link_to 'TimeLine',root_path('#')%></li>
            <li><%= link_to 'Profile',root_path('#')%></li>
            <li><%= link_to 'My History',root_path('#')%></li>
            <li><%= link_to 'Members',root_path('#')%></li>
          </div>
        </ul>
      </div>
    </div>
  </div>
  </div>
</div>