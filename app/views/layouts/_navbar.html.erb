<header id="main_header" class="masthead">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">
      Game Reviews
    </a>

    <div id="account-controls" class="hidden-xs pull-right">
    <% if user_signed_in? %>
      <div class="login-signup">
        <ul class="dropdwn">
          <li>
            <%= current_user.name %>
            <ul class="dropdwn_menu">
              <a href="<%=  dashboard_index_path %>">
                <li>
                <i class="fa fa-user fa-custom-accounts"></i>
                My Account</li>
              </a>
              <a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow">
                <li>
                  <i class="fas fa-sign-out-alt fa-custom-accounts"></i>
                  Log out</li>
              </a>
            <ul>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <div class="login-signup">
      <ul class="dropdwn">
        <li>
          Hello!guest!
          <ul class="dropdwn_menu">
            <a href="<%= new_user_session_path %>">
              <li>
              <i class="fas fa-sign-in-alt fa-custom-accounts"></i></i>
              Log in</li>
            </a>
            <a href="<%= new_user_registration_path %>">
              <li>
              <i class="fas fa-sign-in-alt fa-custom-accounts"></i></i>
              Sign up</li>
            </a>
          </ul>
        </li>
      </ul>
    </div>
    <% end %>
  </div>
</header>

<div class="d-md-block d-none">
  <nav class="navbar navbar-expand-md bg-white py-2">
    <div class="collapse navbar-collapse justify-content-center">
      <div class="navbar-nav">
        <ul class="navbar-nav align-items-center ">
          <li class="nav-item mr-5">
            <%= link_to reviews_path do %>
              <i class="fas fa-star"></i> みんなのレビュー
            <% end %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to games_path do %>
              <i class="fas fa-search"></i> データベース
            <% end %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to ranking_index_path do %>
              <i class="far fa-star"></i> ランキング
            <% end %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to root_path do %>
              <i class="fas fa-crown"></i> お気に入り
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>  



            