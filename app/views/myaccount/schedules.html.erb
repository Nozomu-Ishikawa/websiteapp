<div class="row pt-3 pb-5">
  <div class="col-sm-8 order-md-2 mb-3">
    <div class="card bg-white border-none shadow-sm mb-3">
      <div class="card-header font-weight-bold">
        予定を入れる
      </div>
      <div class="card-body p-4">
        <%= simple_form_for(Schedule.new, url: schedules_path, method: :post, local: true) do |f| %>
          <%= f.input :title %>
          <%= f.input :start_time %>
          <div class="text-center">
            <%= f.submit class: "btn btn-danger btn-sm px-5" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card bg-white border-none shadow-sm">
      <div class="card-header font-weight-bold">
        カレンダー
      </div>
      <div class="card-body p-4">
        <%= month_calendar schedules: current_user.schedules do |date, schedules| %>
          <%= date.day %>
          <% schedules.each do |schedule| %>
            <div>
              <%= schedule.title %>
              <%= link_to schedule_path(schedule.id), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                <i class="far fa-times-circle"></i>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= render 'myaccount/sp_menu' %>
  </div>
  <div class="col-sm-4 order-md-1">
    <%= render 'myaccount/sidebar' %>
  </div>
</div>
