<% if user_signed_in? %>
  <% if current_user.completions.find_by(game_id: game.id) %>
    <%= link_to game_completion_path(game_id: game.id, id: game.id), method: :delete, remote: true, class: "btn btn-success btn-sm incompletion" do %>
      <i class="fas fa-flag"></i> プレイ済み
    <% end %>
  <% else %>
    <%= link_to game_completions_path(game.id), method: :post, remote: true, class: "btn btn-danger btn-sm completion" do %>
      <i class="far fa-flag"></i> 未プレイ
    <% end %>
  <% end %>
<% end %>